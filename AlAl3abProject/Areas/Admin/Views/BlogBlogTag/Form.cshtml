@model Domains.TbBlogBlogTag
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 breadcrumb-wrapper mb-4">
        <span class="text-muted fw-light">الوحة التحكم/</span>   ربط المدونات بالتاجات
    </h4>

    <!-- Basic Layout -->
    <div class="row">
        <div class="col-xl">



            <!-- Multi Column with Form Separator -->
            <div class="card mb-4">
                <h5 class="card-header">عناصر   ربط المدونات بالتاجات</h5>
                <form id="form" enctype="multipart/form-data" method="post" role="form" asp-area="Admin" asp-controller="BlogBlogTag" asp-action="Save" class="card-body">


                    <div class="col-md-12">
                        <div class="col-md-12">
                            <input type="hidden" asp-for="BlogBlogTagId">
                            <input type="hidden" asp-for="CreatedDate">
                            <div class="col-md-12">
                                <label class="form-label" for="multicol-country">اختر المدونة</label>
                                <select asp-items="@(new SelectList(ViewBag.blogs , "BlogId" , "BlogTitle"))" asp-for="BlogId" id="multicol-country" class="select2 form-select" data-allow-clear="true">
                                    <option value="">اختر  اسم  المدونة</option>

                                </select>
                                <span asp-validation-for="BlogId" class="text-danger"></span>
                            </div>
                        </div>
                        

                        <div class="col-md-12">

                            <label class="form-label" for="multicol-country">اسم التاج</label>
                            <select asp-items="@(new SelectList(ViewBag.tags , "BlogTagId" , "BlogTaName"))" asp-for="BlogTagId" id="multicol-country" class="select2 form-select" data-allow-clear="true">
                                <option value="">اختر  اسم التاج</option>

                            </select>
                            <span asp-validation-for="BlogTagId" class="text-danger"></span>
                        </div>



                       
                       
                       





                      



                      
                      




                   


                      



                     




                       




                        <div class="pt-4">
                            <button type="submit" class="btn btn-primary me-sm-3 me-1">Submit</button>

                        </div>
                    </div>

                </form>
            </div>
        </div>

    </div>


</div>
