    <script>

        function selectAyats(select) {
            var surahId = select.value;
            console.log(surahId)
            $.ajax({
                url: "/Admin/BlogItemSeller/GetAyatsBySurahId/",
                data: { "surahId": surahId },
                contentType: "application/json; charset=utf-8",

                success: function (result) {
                    console.log(result.status)
                    if (result.status == false) {
                        $("#message").text(result.message);
                        var select = $("#AyaId");
                        select.empty();
                        select.append('<option value="">لا يوجد آيات لعرضها </option>');


                    }
                    else {
                        console.log(result)
                        $("#message").text("");
                        var select = $("#AyaId");
                        select.empty();
                        select.append('<option value="">اختر الآية</option>');
                        $.each(result.data, function (index, item) {
                            select.append('<option value="' + item.itemSellerId + '">' + item.itemName + '</option>');
                        });

                    }
                },
                failure: function (response) {
                    alert(response.responseText);
                },
                error: function (response) {
                    alert(response.responseText);
                }

            });

        }

    </script>

 }