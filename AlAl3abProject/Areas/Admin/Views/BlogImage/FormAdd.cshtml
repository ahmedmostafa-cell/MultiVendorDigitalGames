@model Domains.TbBlogImage
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 breadcrumb-wrapper mb-4">
        <span class="text-muted fw-light">الوحة التحكم/</span>  اضافة  صور للمدونات
    </h4>

    <!-- Basic Layout -->
    <div class="row">
        <div class="col-xl">



            <!-- Multi Column with Form Separator -->
            <div class="card mb-4">
                <h5 class="card-header">عناصر  صور للمدونات</h5>
                <form id="form" enctype="multipart/form-data" method="post" role="form" asp-area="Admin" asp-controller="BlogImage" asp-action="Save" class="card-body">


                    <div class="row g-3">
                        
                          <div class="col-md-12">
                            <input type="hidden" asp-for="BlogImageId">
                            <input type="hidden" asp-for="BlogId">
                            <input type="hidden" asp-for="CreatedDate">
                            <label class="form-label" for="basic-default-company">اضف صورة للمدونة</label>
                            <input type="file" multiple class="form-control" required name="files" id="selectedFiles">
                               
                                <span class="text-danger" id="error1"></span>
                          
                         </div>
                         <div class="col-md-12">
                           
                            <label class="form-label" for="basic-default-fullname">  ترتيب الصور</label>
                            <input asp-for="OrderNo" type="text" class="form-control" id="basic-default-fullname" placeholder="    ترتيب الصور" />
                            <span asp-validation-for="OrderNo" class="text-danger"></span>
                        </div>

                        <div class="col-md-12">
                            <label class="form-label" for="multicol-country">هل الصورة رئيسية </label>
                            <select asp-for="BlogImageMain" id="multicol-country" class="select2 form-select" data-allow-clear="true">
                                <option value="">اختر  هل الصورة رئيسية</option>
                                <option value="نعم">  نعم  </option>
                                <option value="لا">  لا  </option>

                            </select>
                            <span asp-validation-for="BlogImageMain" class="text-danger"></span>
                        </div>



                          <div class="col-md-12">
                           
                            <label class="form-label" for="basic-default-fullname">  عنوان الصور</label>
                            <input asp-for="BlogImageTitle" type="text" class="form-control" id="basic-default-fullname" placeholder="عنوان الصور" />
                            <span asp-validation-for="BlogImageTitle" class="text-danger"></span>
                        </div>


                        <div class="col-md-12">

                            <label class="form-label" for="basic-default-fullname">  عنوان الصور الانجليزي</label>
                            <input asp-for="BlogImageTitleEn" type="text" class="form-control" id="basic-default-fullname" placeholder=" عنوان الصور الانجليزي " />
                            <span asp-validation-for="BlogImageTitleEn" class="text-danger"></span>
                        </div>



                        <div class="col-md-12">

                            <label class="form-label" for="basic-default-fullname">  شرح الصور</label>
                            <input asp-for="BlogImageText" type="text" class="form-control" id="basic-default-fullname" placeholder="شرح الصور " />
                            <span asp-validation-for="BlogImageText" class="text-danger"></span>
                        </div>





                        <div class="col-md-12">

                            <label class="form-label" for="basic-default-fullname">  شرح الصور الانجليزي</label>
                            <input asp-for="BlogImageTextEn" type="text" class="form-control" id="basic-default-fullname" placeholder=" شرح الصور الانجليزي " />
                            <span asp-validation-for="BlogImageTextEn" class="text-danger"></span>
                        </div>
                       


                        



                       


                     




                       




                        <div class="pt-4">
                            <button type="submit" class="btn btn-primary me-sm-3 me-1">Submit</button>

                        </div>
                    </div>

                </form>
            </div>
        </div>

    </div>


</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
    <script>
                //alert("ahmed");
                const logo = document.getElementById('selectedFile');
                const license = document.getElementById('selectedFiles');
                const form = document.getElementById('form')
                const erroElement = document.getElementById('error')
                const erroElement1 = document.getElementById('error1')
        form.addEventListener('submit', (e) => {
            //e.preventDefault();
            let messages = [];
            let messages2 = [];
            if (logo.value === '' || logo.value == null) {
                //alert('ahmed');
                messages.push('This field is required');
                erroElement.innerHTML = messages;
            }
            else {
                messages = [];
                erroElement.innerHTML = messages;

                    }
            if (license.value === '' || license.value == null) {
                //alert('ahmed');
                messages2.push('This field is required');
                erroElement1.innerHTML = messages2;
                    }
            else {
                messages = [];
                erroElement1.innerHTML = messages2;

                    }


                });
    </script>

 }