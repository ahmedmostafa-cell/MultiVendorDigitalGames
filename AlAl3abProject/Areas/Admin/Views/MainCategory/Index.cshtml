@model AlAl3abProject.Models.HomePageModel
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 breadcrumb-wrapper mb-4"><span class="text-muted fw-light">لوحة التحكم /</span>   الفئة الرئيسية للمنتجات</h4>
    <a asp-area="Admin" asp-controller="MainCategory" asp-action="Form"><button type="button" class="btn btn-primary">اضف عنصر جديد ف   الفئة الرئيسية للمنتجات</button></a>
    <!-- DataTable with Buttons -->
    <div class="card">
        <div class="data_table">
            <table id="example" class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>اسم  الفئة الرئيسية للمنتجات</th>
                        <th>اسم  الفئة الرئيسية للمنتجات الانجليزي</th>

                        <th>وصف  الفئة الرئيسية للمنتجات</th>
                        <th>وصف  الفئة الرئيسية للمنتجات الانجليزي</th>

                        <th>اسم نوع  الفئة الرئيسية للمنتجات الانجليزي</th>
                        <th>تعديل</th>

                        <th>حذف</th>


                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.lstMainCategories)
                    {

                        <tr>
                            <td>@item.MainCategoryTitle</td>
                            <td>@item.MainCategoryTitleEn</td>
                             <td>@item.MainCategoryDescription</td>
                            <td>@item.MainCategoryDescriptionEn</td>
                            <td>@Model.lstTypes.Where(a=> a.TypeId == item.TypeId).FirstOrDefault().TypeTitle</td>
                           
                         
                           
                            <td>
                                <a asp-area="Admin" asp-controller="MainCategory" asp-action="Form" asp-route-id="@item.MainCategoryId" class="btn btn-info text-white" style="cursor:pointer">
                                    تعديل
                                </a>
                            </td>
                            <td>
                                <a asp-area="Admin" asp-controller="MainCategory" asp-action="Delete" asp-route-id="@item.MainCategoryId" class="btn btn-danger text-white" style="cursor:pointer">
                                    حذف
                                </a>
                            </td>


                        </tr>

                    }


                </tbody>
            </table>
        </div>
    </div>
    <!-- Modal to add new record -->
    <div class="offcanvas offcanvas-end" id="add-new-record">
        <div class="offcanvas-header border-bottom">
            <h5 class="offcanvas-title" id="exampleModalLabel">New Record</h5>
            <button type="button"
                    class="btn-close text-reset"
                    data-bs-dismiss="offcanvas"
                    aria-label="Close"></button>
        </div>

    </div>
    <!--/ DataTable with Buttons -->

    <hr class="my-5" />


    <!--/ Content -->
</div>