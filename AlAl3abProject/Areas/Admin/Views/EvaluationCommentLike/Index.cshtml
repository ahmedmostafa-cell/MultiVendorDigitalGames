@model AlAl3abProject.Models.HomePageModel
@inject Microsoft.AspNetCore.Identity.UserManager<BL.ApplicationUser> USERmANAGER
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 breadcrumb-wrapper mb-4"><span class="text-muted fw-light">لوحة التحكم /</span>  التفاعل مع التقييمات عل منتجات التجار</h4>
    
    <!-- DataTable with Buttons -->
    <div class="card">
        <div class="data_table">
            <table id="example" class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>اسم صاحب التفاعل عل التقييم</th>
                      
                        <th>   ايميل صاحب التفاعل عل التقييم</th>
                        <th>   اسم المنتج</th>
                        <th>   اسم التاجر</th>

                        <th>   التقييم</th>

                        <th>     التفاعل الايجابي</th>
                        <th>  التفاعل السلبي</th>

                        <th>  التاريخ</th>

                     

                     


                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.lstEvaluationCommentLikes)
                    {

                        <tr>
                            <td>@USERmANAGER.Users.Where(a=> a.Id == item.UserId).FirstOrDefault().FirstName</td>
                            <td>
                                @USERmANAGER.Users.Where(a=> a.Id == item.UserId).FirstOrDefault().Email
                            </td>
                            <td>@Model.lstItems.Where(A=> A.ItemId == Model.lstEvaluations.Where(a=> a.EvaluationId ==  item.EvaluationId).FirstOrDefault().ItemId).FirstOrDefault().ItemName </td>
                            <td>@Model.lstSellers.Where(A=> A.SellerId == Model.lstEvaluations.Where(a=> a.EvaluationId ==  item.EvaluationId).FirstOrDefault().SellerId).FirstOrDefault().SellerFullName </td>
                            <td>
                                @Model.lstEvaluations.Where(A=> A.EvaluationId == item.EvaluationId).FirstOrDefault().EvaluationText
                            </td>
                            <td>
                                @item.LikeAction
                            </td>
                            <td>@item.DislikeAction</td>

                            <td>@item.CreatedDate</td>
                         
                       
                          


                        </tr>

                    }


                </tbody>
            </table>
        </div>
    </div>
    <!-- Modal to add new record -->
    <div class="offcanvas offcanvas-end" id="add-new-record">
        <div class="offcanvas-header border-bottom">
            <h5 class="offcanvas-title" id="exampleModalLabel">New Record</h5>
            <button type="button"
                    class="btn-close text-reset"
                    data-bs-dismiss="offcanvas"
                    aria-label="Close"></button>
        </div>

    </div>
    <!--/ DataTable with Buttons -->

    <hr class="my-5" />


    <!--/ Content -->
</div>