@model AlAl3abProject.Models.HomePageModel
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 breadcrumb-wrapper mb-4"><span class="text-muted fw-light">لوحة التحكم /</span>  المنافسات</h4>
    <a asp-area="Admin" asp-controller="Competition" asp-action="Form"><button type="button" class="btn btn-primary">اضف عنصر جديد ف  المنافسات</button></a>
    <!-- DataTable with Buttons -->
    <div class="card">
        <div class="data_table">
            <table id="example" class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>عنوان المنافسة</th>
                        <th>عنوان المنافسة الانجليزي</th>
                      
                        <th>الصورة</th>
                        <th> تفاصيل القوانين</th>
                        <th>اضافة قانون</th>
                       
                        <th>  المشاركين</th>
                        <th>تعديل</th>

                        <th>حذف</th>


                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.lstCompetitions)
                    {

                        <tr>
                            <td>
                                @item.CompetitionTitle
                            </td>
                            <td>
                                @item.CompetitionTitleEn
                            </td>
                          
                            <td style="width:10%">

                                <img style="max-width: 100%; " max-height: 100%;" src="@string.Format("/Uploads/{0}",item.CompetitonImagePath)" alt="Img placeholder">





                            </td>
                            <td>
                                <a asp-area="Admin" asp-controller="CompetitionRule" asp-action="Index" asp-route-id="@item.CompetitionId" class="btn btn-info text-white" style="cursor:pointer">
                                    تفاصيل القوانين
                                </a>

                            </td>

                            <td>
                                <a asp-area="Admin" asp-controller="CompetitionRule" asp-action="FormAdd" asp-route-id="@item.CompetitionId" class="btn btn-info text-white" style="cursor:pointer">
                                    اضف قانون
                                </a>
                            </td>


                            <td>
                                <a asp-area="Admin" asp-controller="CompetitionRecord" asp-action="Index" asp-route-id="@item.CompetitionId" class="btn btn-info text-white" style="cursor:pointer">
                                    المشاركين
                                </a>
                            </td>

                          
                            <td>
                                <a asp-area="Admin" asp-controller="Competition" asp-action="Form" asp-route-id="@item.CompetitionId" class="btn btn-info text-white" style="cursor:pointer">
                                    تعديل
                                </a>
                            </td>
                            <td>
                                <a asp-area="Admin" asp-controller="Competition" asp-action="Delete" asp-route-id="@item.CompetitionId" class="btn btn-danger text-white" style="cursor:pointer">
                                    حذف
                                </a>
                            </td>


                        </tr>

                    }


                </tbody>
            </table>
        </div>
    </div>
    <!-- Modal to add new record -->
    <div class="offcanvas offcanvas-end" id="add-new-record">
        <div class="offcanvas-header border-bottom">
            <h5 class="offcanvas-title" id="exampleModalLabel">New Record</h5>
            <button type="button"
                    class="btn-close text-reset"
                    data-bs-dismiss="offcanvas"
                    aria-label="Close"></button>
        </div>

    </div>
    <!--/ DataTable with Buttons -->

    <hr class="my-5" />


    <!--/ Content -->
</div>