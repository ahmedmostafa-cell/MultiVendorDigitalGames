@model Domains.TbContactU
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 breadcrumb-wrapper mb-4">
        <span class="text-muted fw-light">الوحة التحكم/</span>  تواصل معنا
    </h4>

    <!-- Basic Layout -->
    <div class="row">
        <div class="col-xl">



            <!-- Multi Column with Form Separator -->
            <div class="card mb-4">
                <h5 class="card-header">   مدن</h5>
                <form id="form" enctype="multipart/form-data" method="post" role="form" asp-area="Admin" asp-controller="ContactU" asp-action="Save" class="card-body">


                    <div class="row g-3">
                        <div class="col-md-12">
                            <input type="hidden" asp-for="ContactUsId">
                            <input type="hidden" asp-for="CreatedDate">
                            <label class="form-label" for="basic-default-fullname">    الايميل الرسمي</label>
                            <input asp-for="BusinessDevelopementEmail" type="email" class="form-control" id="basic-default-fullname" placeholder=" الايميل الرسمي" />
                            <span asp-validation-for="BusinessDevelopementEmail" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">

                            <label class="form-label" for="basic-default-fullname">  ايميل الشؤون القانونية</label>
                            <input asp-for="LegalDepartmentEmail" type="email" class="form-control" id="basic-default-fullname" placeholder="ايميل الشؤون القانونية" />
                            <span asp-validation-for="LegalDepartmentEmail" class="text-danger"></span>
                        </div>





                        <div class="col-md-12">

                            <label class="form-label" for="basic-default-fullname">  ايميل التوظيف</label>
                            <input asp-for="CreatedBy" type="email" class="form-control" id="basic-default-fullname" placeholder="ايميل الشؤون القانونية" />
                            <span asp-validation-for="CreatedBy" class="text-danger"></span>
                        </div>















                        <div class="pt-4">
                            <button type="submit" class="btn btn-primary me-sm-3 me-1">Submit</button>

                        </div>
                    </div>

                </form>
            </div>
        </div>

    </div>


</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
    <script>
                //alert("ahmed");
                const logo = document.getElementById('selectedFile');
                const license = document.getElementById('selectedFiles');
                const form = document.getElementById('form')
                const erroElement = document.getElementById('error')
                const erroElement1 = document.getElementById('error1')
        form.addEventListener('submit', (e) => {
            //e.preventDefault();
            let messages = [];
            let messages2 = [];
            if (logo.value === '' || logo.value == null) {
                //alert('ahmed');
                messages.push('This field is required');
                erroElement.innerHTML = messages;
            }
            else {
                messages = [];
                erroElement.innerHTML = messages;

                    }
            if (license.value === '' || license.value == null) {
                //alert('ahmed');
                messages2.push('This field is required');
                erroElement1.innerHTML = messages2;
                    }
            else {
                messages = [];
                erroElement1.innerHTML = messages2;

                    }


                });
    </script>

 }