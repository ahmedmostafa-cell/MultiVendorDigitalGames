@model AlAl3abProject.Models.HomePageModel
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 breadcrumb-wrapper mb-4"><span class="text-muted fw-light">لوحة التحكم /</span>   تواصل معنا</h4>
    <a asp-area="Admin" asp-controller="ContactU" asp-action="Form"><button type="button" class="btn btn-primary">تواصل معنا  </button></a>
    <!-- DataTable with Buttons -->
    <div class="card">
        <div class="data_table">
            <table id="example" class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>   الايميل الرسمي</th>
                        <th>   ايميل الشؤون القانونية</th>
                        <th>   ايميل التوظيف</th>


                        <th>تعديل</th>

                        <th>حذف</th>


                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.lstContactUs)
                    {

                    <tr>
                        <td>@item.BusinessDevelopementEmail</td>
                        <td>@item.LegalDepartmentEmail</td>
                        <td>@item.CreatedBy</td>


                        <td>
                            <a asp-area="Admin" asp-controller="ContactU" asp-action="Form" asp-route-id="@item.ContactUsId" class="btn btn-info text-white" style="cursor:pointer">
                                تعديل
                            </a>
                        </td>
                        <td>
                            <a asp-area="Admin" asp-controller="ContactU" asp-action="Delete" asp-route-id="@item.ContactUsId" class="btn btn-danger text-white" style="cursor:pointer">
                                حذف
                            </a>
                        </td>


                    </tr>

                    }


                </tbody>
            </table>
        </div>
    </div>
    <!-- Modal to add new record -->
    <div class="offcanvas offcanvas-end" id="add-new-record">
        <div class="offcanvas-header border-bottom">
            <h5 class="offcanvas-title" id="exampleModalLabel">New Record</h5>
            <button type="button"
                    class="btn-close text-reset"
                    data-bs-dismiss="offcanvas"
                    aria-label="Close"></button>
        </div>

    </div>
    <!--/ DataTable with Buttons -->

    <hr class="my-5" />


    <!--/ Content -->
</div>