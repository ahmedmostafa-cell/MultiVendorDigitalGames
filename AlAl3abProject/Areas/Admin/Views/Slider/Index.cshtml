@model AlAl3abProject.Models.HomePageModel
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 breadcrumb-wrapper mb-4"><span class="text-muted fw-light">لوحة التحكم /</span>  السليدر</h4>
    <a asp-area="Admin" asp-controller="Slider" asp-action="Form"><button type="button" class="btn btn-primary">اضف عنصر جديد ف  السليدر</button></a>
    <!-- DataTable with Buttons -->
    <div class="card">
        <div class="data_table">
            <table id="example" class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>صورة السليدر</th>
                      
                        <th>عنوان السليدر</th>
                        <th> عنوان السليدر الانحليزي </th>

                        <th>وصف السليدر</th>

                        <th>وصف السليدر الانجليزي</th>

                        <th>مكان السليدر </th>


                        <th>ترتيب ظهور السليدر </th>
                        
                        <th>تعديل</th>

                        <th>حذف</th>


                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.lstSliders)
                    {

                        <tr>
                           
                            <td style="width:10%">

                                <img style="max-width: 100%; " max-height: 100%;" src="@string.Format("/Uploads/{0}",item.SliderImagePath)" alt="Img placeholder">





                            </td>
                            <td>
                                @item.SliderTitle
                            </td>

                            <td>
                                @item.SliderTitleEn
                            </td>
                            <td>
                                @item.SliderDescription
                            </td>

                            <td>
                                @item.SliderDescriptionEn
                            </td>
                            <td>
                                @item.Location
                            </td>

                            <td>
                                @item.SliderOrderNo
                            </td>
                            

                        
                            <td>
                                <a asp-area="Admin" asp-controller="Slider" asp-action="Form" asp-route-id="@item.SliderId" class="btn btn-info text-white" style="cursor:pointer">
                                    تعديل
                                </a>
                            </td>
                            <td>
                                <a asp-area="Admin" asp-controller="Slider" asp-action="Delete" asp-route-id="@item.SliderId" class="btn btn-danger text-white" style="cursor:pointer">
                                    حذف
                                </a>
                            </td>


                        </tr>

                    }


                </tbody>
            </table>
        </div>
    </div>
    <!-- Modal to add new record -->
    <div class="offcanvas offcanvas-end" id="add-new-record">
        <div class="offcanvas-header border-bottom">
            <h5 class="offcanvas-title" id="exampleModalLabel">New Record</h5>
            <button type="button"
                    class="btn-close text-reset"
                    data-bs-dismiss="offcanvas"
                    aria-label="Close"></button>
        </div>

    </div>
    <!--/ DataTable with Buttons -->

    <hr class="my-5" />


    <!--/ Content -->
</div>