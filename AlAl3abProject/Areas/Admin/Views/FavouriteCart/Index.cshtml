@model AlAl3abProject.Models.HomePageModel
@inject Microsoft.AspNetCore.Identity.UserManager<BL.ApplicationUser> USERmANAGER
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 breadcrumb-wrapper mb-4"><span class="text-muted fw-light">لوحة التحكم /</span>  سلة المفضلات</h4>
    
    <!-- DataTable with Buttons -->
    <div class="card">
        <div class="data_table">
            <table id="example" class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>اسم صاحب السلة</th>


                        <th>    اسم المنتج</th>
                        <th>    اسم التاجر</th>
                        <th> صورة المنتج</th>
                        <th>  اسم المنطقة</th>
                        <th>  التقييم نجوم</th>

                        <th>  التقييم ارقام</th>
                        <th>  سعر المنتج </th>

                        <th>   التاريخ </th>

                     


                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.lstFavouriteCarts)
                    {

                        <tr>
                            <td>@USERmANAGER.Users.Where(a=> a.Id == item.UserId).FirstOrDefault().FirstName</td>
                            <td>@Model.lstItems.Where(A=> A.ItemId == item.ItemId).FirstOrDefault().ItemName</td>
                            <td>@Model.lstSellers.Where(a=> a.SellerId == item.SellerId).FirstOrDefault().SellerFullName</td>
                               <td style="width:10%">

                                <img style="max-width: 100%; " max-height: 100%;" src="@string.Format("/Uploads/{0}",item.ItemImagePath)" alt="Img placeholder">





                            </td>
                            <td>@item.Region</td>
                            <td>@item.SellerItemEvaluationStarts</td>
                            <td>@item.SellerItemEvaluationNumbers</td>
                            <td>@item.ItemSalePrice</td>
                         
                          
                            
                            <td>@item.CreatedDate</td>
                         
                         
                          


                        </tr>

                    }


                </tbody>
            </table>
        </div>
    </div>
    <!-- Modal to add new record -->
    <div class="offcanvas offcanvas-end" id="add-new-record">
        <div class="offcanvas-header border-bottom">
            <h5 class="offcanvas-title" id="exampleModalLabel">New Record</h5>
            <button type="button"
                    class="btn-close text-reset"
                    data-bs-dismiss="offcanvas"
                    aria-label="Close"></button>
        </div>

    </div>
    <!--/ DataTable with Buttons -->

    <hr class="my-5" />


    <!--/ Content -->
</div>