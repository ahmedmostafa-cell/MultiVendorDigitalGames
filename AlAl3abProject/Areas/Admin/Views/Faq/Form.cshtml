@model Domains.TbFaq
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 breadcrumb-wrapper mb-4">
        <span class="text-muted fw-light">الوحة التحكم/</span>  الاسئلة الشائعة  
    </h4>

    <!-- Basic Layout -->
    <div class="row">
        <div class="col-xl">



            <!-- Multi Column with Form Separator -->
            <div class="card mb-4">
                <h5 class="card-header">عناصر  مدونات</h5>
                <form id="form" enctype="multipart/form-data" method="post" role="form" asp-area="Admin" asp-controller="Faq" asp-action="Save" class="card-body">


                    <div class="row g-3">
                        <div class="col-md-12">
                            <input type="hidden" asp-for="Faqid">
                            <input type="hidden" asp-for="CreatedDate">
                            <label class="form-label" for="basic-default-fullname">  السؤال </label>
                            <input asp-for="Faqquestion" type="text" class="form-control" id="basic-default-fullname" placeholder="    السؤال" />
                            <span asp-validation-for="Faqquestion" class="text-danger"></span>
                        </div>
                         <div class="col-md-12">
                           
                            <label class="form-label" for="basic-default-fullname">  السؤال الانجليزي</label>
                            <input asp-for="FaqquestionEn" type="text" class="form-control" id="basic-default-fullname" placeholder="     السؤال انجليزي" />
                            <span asp-validation-for="FaqquestionEn" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label class="form-label" for="basic-default-company"> الاجابة</label>
                            <input asp-for="Faqanswer" type="text" class="form-control" id="basic-default-company" placeholder="   الاجابة" />
                            <span asp-validation-for="Faqanswer" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label class="form-label" for="basic-default-company">   الاجابة انجليزي</label>
                            <input asp-for="FaqanswerEn" type="text" class="form-control" id="basic-default-company" placeholder="   الاجابة انجليزي" />
                            <span asp-validation-for="FaqanswerEn" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label class="form-label" for="multicol-country">اسم الفئة الفرعية للسؤال   </label>
                            <select asp-items="@(new SelectList( ViewBag.faqSubCategories, "FaqsubCategoryId" , "FaqsubCategoryName"))" asp-for="FaqsubCategoryId" id="multicol-country" class="select2 form-select" data-allow-clear="true">
                                <option value="">اختر  اسم الفئة الفرعية للسؤال </option>

                            </select>
                            <span asp-validation-for="FaqsubCategoryId" class="text-danger"></span>
                        </div>


                        

                       




                        <div class="pt-4">
                            <button type="submit" class="btn btn-primary me-sm-3 me-1">Submit</button>

                        </div>
                    </div>

                </form>
            </div>
        </div>

    </div>


</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
    <script>
                //alert("ahmed");
                const logo = document.getElementById('selectedFile');
                const license = document.getElementById('selectedFiles');
                const form = document.getElementById('form')
                const erroElement = document.getElementById('error')
                const erroElement1 = document.getElementById('error1')
        form.addEventListener('submit', (e) => {
            //e.preventDefault();
            let messages = [];
            let messages2 = [];
            if (logo.value === '' || logo.value == null) {
                //alert('ahmed');
                messages.push('This field is required');
                erroElement.innerHTML = messages;
            }
            else {
                messages = [];
                erroElement.innerHTML = messages;

                    }
            if (license.value === '' || license.value == null) {
                //alert('ahmed');
                messages2.push('This field is required');
                erroElement1.innerHTML = messages2;
                    }
            else {
                messages = [];
                erroElement1.innerHTML = messages2;

                    }


                });
    </script>

 }