@model Domains.TbItem
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 breadcrumb-wrapper mb-4">
        <span class="text-muted fw-light">الوحة التحكم/</span>  اضافة  منتجات
    </h4>

    <!-- Basic Layout -->
    <div class="row">
        <div class="col-xl">



            <!-- Multi Column with Form Separator -->
            <div class="card mb-4">
                <h5 class="card-header">عناصر  منتجات</h5>
                <form id="form" enctype="multipart/form-data" method="post" role="form" asp-area="Admin" asp-controller="Item" asp-action="Save" class="card-body">


                    <div class="row g-3">
                        <div class="col-md-12">
                            <input type="hidden" asp-for="ItemId">
                            <input type="hidden" asp-for="CreatedDate">
                            <label class="form-label" for="basic-default-fullname">  اسم المنتج</label>
                            <input asp-for="ItemName" type="text" class="form-control" id="basic-default-fullname" placeholder="اسم المنتج " />
                            <span asp-validation-for="ItemName" class="text-danger"></span>
                        </div>

                        <div class="col-md-12">
                           
                            <label class="form-label" for="basic-default-fullname">  اسم المنتج الانجليزي</label>
                            <input asp-for="ItemNameEn" type="text" class="form-control" id="basic-default-fullname" placeholder="اسم المنتج الانجليزي " />
                            <span asp-validation-for="ItemNameEn" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label class="form-label" for="multicol-country">اسم المنطقة</label>
                            <select asp-items="@(new SelectList(ViewBag.regions , "RegionId" , "RegionName"))" asp-for="RegionId" id="multicol-country" class="select2 form-select" data-allow-clear="true">
                                <option value="">اختر  اسم المنطقة </option>

                            </select>
                            <span asp-validation-for="ItemId" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label class="form-label" for="multicol-country"> نظام التشغيل</label>
                            <select asp-items="@(new SelectList(ViewBag.operatingSystems , "OperatingSystemId" , "OperatingSystemName"))" asp-for="OperatingSystemId" id="multicol-country" class="select2 form-select" data-allow-clear="true">
                                <option value="">اختر  اسم نظام التشغيل </option>

                            </select>
                            <span asp-validation-for="ItemId" class="text-danger"></span>
                        </div>
                      
                      



                        <div class="col-md-12">
                          
                            <label class="form-label" for="basic-default-fullname">  المفتاح الالكتروني</label>
                            <input asp-for="DigitalKey" type="text" class="form-control" id="basic-default-fullname" placeholder="      المفتاح الالكتروني" />
                            <span asp-validation-for="DigitalKey" class="text-danger"></span>
                        </div>





                        <div class="col-md-12">
                            <label class="form-label" for="multicol-country">هل اللعبة حديثة ستزل قريبا</label>
                            <select  asp-for="UpComingGames" id="multicol-country" class="select2 form-select" data-allow-clear="true">
                                <option value="">اختر  </option>
                                <option value="نعم">نعم</option>
                                <option value="لا">  لا</option>

                            </select>
                            <span asp-validation-for="UpComingGames" class="text-danger"></span>
                        </div>



                       


                      





                       




                        <div class="pt-4">
                            <button type="submit" class="btn btn-primary me-sm-3 me-1">Submit</button>

                        </div>
                    </div>

                </form>
            </div>
        </div>

    </div>


</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
    <script>
                //alert("ahmed");
                const logo = document.getElementById('selectedFile');
                const license = document.getElementById('selectedFiles');
                const form = document.getElementById('form')
                const erroElement = document.getElementById('error')
                const erroElement1 = document.getElementById('error1')
        form.addEventListener('submit', (e) => {
            //e.preventDefault();
            let messages = [];
            let messages2 = [];
            if (logo.value === '' || logo.value == null) {
                //alert('ahmed');
                messages.push('This field is required');
                erroElement.innerHTML = messages;
            }
            else {
                messages = [];
                erroElement.innerHTML = messages;

                    }
            if (license.value === '' || license.value == null) {
                //alert('ahmed');
                messages2.push('This field is required');
                erroElement1.innerHTML = messages2;
                    }
            else {
                messages = [];
                erroElement1.innerHTML = messages2;

                    }


                });
    </script>

 }