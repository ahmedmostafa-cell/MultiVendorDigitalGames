@model Domains.TbBlog
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 breadcrumb-wrapper mb-4">
        <span class="text-muted fw-light">الوحة التحكم/</span>  اضافة  مدونات
    </h4>

    <!-- Basic Layout -->
    <div class="row">
        <div class="col-xl">



            <!-- Multi Column with Form Separator -->
            <div class="card mb-4">
                <h5 class="card-header">عناصر  مدونات</h5>
                <form id="form" enctype="multipart/form-data" method="post" role="form" asp-area="Admin" asp-controller="Blog" asp-action="Save" class="card-body">


                    <div class="row g-3">
                        <div class="col-md-12">
                            <input type="hidden" asp-for="BlogId">
                            <input type="hidden" asp-for="CreatedDate">
                            <label class="form-label" for="basic-default-fullname">  عنوان مدونة</label>
                            <input asp-for="BlogTitle" type="text" class="form-control" id="basic-default-fullname" placeholder="    عنوان مدونة" />
                            <span asp-validation-for="BlogTitle" class="text-danger"></span>
                        </div>
                         <div class="col-md-12">
                           
                            <label class="form-label" for="basic-default-fullname">  عنوان مدونة انجليزي</label>
                            <input asp-for="BlogTitleEn" type="text" class="form-control" id="basic-default-fullname" placeholder="    عنوان مدونة انجليزي" />
                            <span asp-validation-for="BlogTitleEn" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label class="form-label" for="basic-default-company"> وصف مختصر للمدونة</label>
                            <input asp-for="BlogShortDescription" type="text" class="form-control" id="basic-default-company" placeholder=" وصف مختصر للمدونة" />
                            <span asp-validation-for="BlogShortDescription" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label class="form-label" for="basic-default-company"> وصف مختصر للمدونة انجليزي</label>
                            <input asp-for="BlogShortDescriptionEn" type="text" class="form-control" id="basic-default-company" placeholder=" وصف مختصر للمدونة انجليزي" />
                            <span asp-validation-for="BlogShortDescriptionEn" class="text-danger"></span>
                        </div>
                       @* <div class="col-md-12">
                            <label class="form-label" for="multicol-country">اسم المنتج التي تتناوله المدونة</label>
                            <select asp-items="@(new SelectList(ViewBag.items , "ItemId" , "ItemName"))" asp-for="ItemId" id="multicol-country" class="select2 form-select" data-allow-clear="true">
                                <option value="">اختر  اسم المنتج التي تتناوله المدونة</option>

                            </select>
                            <span asp-validation-for="ItemId" class="text-danger"></span>
                        </div>


                       <div class="col-md-12">
                            <label class="form-label" for="multicol-country">اسم التاجر</label>
                            <select asp-items="@(new SelectList(ViewBag.sellers , "SellerId" , "SellerFullName"))" asp-for="SellerId" id="multicol-country" class="select2 form-select" data-allow-clear="true">
                                <option value="">اختر  اسم التاجر</option>

                            </select>
                            <span asp-validation-for="SellerId" class="text-danger"></span>
                        </div>*@



                        <div class="col-md-12">
                            <label class="form-label" for="multicol-country">اسم فئة المدونة</label>
                            <select asp-for="UpdatedBy" id="multicol-country" class="select2 form-select" data-allow-clear="true">
                                <option value="">اختر  فئة المدونة</option>
                                <option value="LATEST">   الحديث</option>
                                <option value="TRENDING">   الترند</option>
                                <option value="POPULAR">   المشهور</option>
                               

                            </select>
                            <span asp-validation-for="UpdatedBy" class="text-danger"></span>
                        </div>



                        <div class="col-md-12">
                          
                            <label class="form-label" for="basic-default-fullname">  ترتيب ظهور المدونة</label>
                            <input asp-for="OrderNo" type="text" class="form-control" id="basic-default-fullname" placeholder="     ترتيب ظهور المدونة" />
                            <span asp-validation-for="OrderNo" class="text-danger"></span>
                        </div>


                        <div class="col-md-12">

                            <label class="form-label" for="basic-default-fullname">  ارفق لينك فيديو من عل يوتيوب للمدونة   </label>
                            <input required asp-for="CreatedBy" type="text" class="form-control" id="basic-default-fullname" placeholder="فيديو يوتيوب" />
                           
                        </div>





                       @* <div class="col-md-12">
                            <label class="form-label" for="multicol-country">اسم القسم التي تنتمي له المدونة</label>
                            <select asp-items="@(new SelectList(ViewBag.blogcategories , "BlogCategoryId" , "BlogCategoryName"))" asp-for="BlogCategoryId" id="multicol-country" class="select2 form-select" data-allow-clear="true">
                                <option value="">اختر  اسم القسم التي تنتمي له المدونة</option>

                            </select>
                            <span asp-validation-for="BlogCategoryId" class="text-danger"></span>
                        </div>
*@


                        <div class="col-md-12">
                            <label class="form-label" for="multicol-country">اسم الموضوع التي تنتمي له المدونة</label>
                            <select asp-items="@(new SelectList(ViewBag.blogtopic , "BlogTopicId" , "BlogTopicName"))" asp-for="BlogTopicId" id="multicol-country" class="select2 form-select" data-allow-clear="true">
                                <option value="">اختر   اسم الموضوع التي تنتمي له المدونة</option>

                            </select>
                            <span asp-validation-for="BlogCategoryId" class="text-danger"></span>
                        </div>



                     




                       




                        <div class="pt-4">
                            <button type="submit" class="btn btn-primary me-sm-3 me-1">Submit</button>

                        </div>
                    </div>

                </form>
            </div>
        </div>

    </div>


</div>
