@model AlAl3abProject.Models.HomePageModel
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 breadcrumb-wrapper mb-4"><span class="text-muted fw-light">لوحة التحكم /</span>  المدونات</h4>
    <a asp-area="Admin" asp-controller="Blog" asp-action="Form"><button type="button" class="btn btn-primary">اضف عنصر جديد ف  المدونات</button></a>
    <!-- DataTable with Buttons -->
    <div class="card">
        <div class="data_table">
            <table id="example" class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>عنوان المدونة</th>
                      
                        <th>اسم المنتج التي تتناوله المدونة</th>
                        <th>اسم التاجر</th>

                        <th>التفاصيل</th>
                         <th>الصور</th>
                        <th>اضافة الصور</th>
                        
                        <th>تعديل</th>

                        <th>حذف</th>


                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.lstBlogs)
                    {

                        <tr>
                            <td>@item.BlogTitle</td>
                            <td>
                                @Model.lstItems.Where(A=> A.ItemId == item.ItemId).FirstOrDefault().ItemName
                            </td>
                            <td>
                                @Model.lstSellers.Where(a=> a.SellerId == item.SellerId).FirstOrDefault().SellerFullName
                            </td>
                            

                            <td>
                                <a asp-area="Admin" asp-controller="Blog" asp-action="Form" asp-route-id="@item.BlogId" class="btn btn-info text-white" style="cursor:pointer">
                                    التفاصيل
                                </a>

                            </td>
                            <td>
                                <a asp-area="Admin" asp-controller="BlogImage" asp-action="Index" asp-route-id="@item.BlogId" class="btn btn-info text-white" style="cursor:pointer">
                                    الصور
                                </a>

                            </td>
                            <td>
                                <a asp-area="Admin" asp-controller="BlogImage" asp-action="FormAdd" asp-route-id="@item.BlogId" class="btn btn-info text-white" style="cursor:pointer">
                                    اضافة صور
                                </a>

                            </td>
                            <td>
                                <a asp-area="Admin" asp-controller="Blog" asp-action="Form" asp-route-id="@item.BlogId" class="btn btn-info text-white" style="cursor:pointer">
                                    تعديل
                                </a>
                            </td>
                            <td>
                                <a asp-area="Admin" asp-controller="Blog" asp-action="Delete" asp-route-id="@item.BlogId" class="btn btn-danger text-white" style="cursor:pointer">
                                    حذف
                                </a>
                            </td>


                        </tr>

                    }


                </tbody>
            </table>
        </div>
    </div>
    <!-- Modal to add new record -->
    <div class="offcanvas offcanvas-end" id="add-new-record">
        <div class="offcanvas-header border-bottom">
            <h5 class="offcanvas-title" id="exampleModalLabel">New Record</h5>
            <button type="button"
                    class="btn-close text-reset"
                    data-bs-dismiss="offcanvas"
                    aria-label="Close"></button>
        </div>

    </div>
    <!--/ DataTable with Buttons -->

    <hr class="my-5" />


    <!--/ Content -->
</div>