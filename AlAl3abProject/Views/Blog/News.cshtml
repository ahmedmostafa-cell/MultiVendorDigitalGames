    <script>
        var e = window.localStorage.getItem('ahmed');
        var ee = window.localStorage.getItem('ahmedd');
        document.addEventListener('DOMContentLoaded', function () {
            let switch_value = window.localStorage.getItem('language_switch');
            const toggleSwitch = document.querySelector('#language-toggle');
            // Check if there is a saved state in localStorage
            if (switch_value === 'true') {
                document.getElementById("language-toggle").checked = true;
            } else if (switch_value === 'false') {
                document.getElementById("language-toggle").checked = false;
            }

            // Add event listener to save state when the switch is toggled
            toggleSwitch.addEventListener('change', function () {
                window.localStorage.setItem('language_switch', toggleSwitch.checked);
            });
        });







        //window.localStorage.setItem('language_switch', "");
        //localStorage.clear();
        function onCompanyChanged() {
            //var selectedValue = $(":selected").val();
            var isChecked = document.getElementById("language-toggle").checked;

            if (isChecked === true) {
                window.localStorage.setItem('language_switch', isChecked);
                if (e !== null) {

                    window.location.href = `/Home/ChangeLanguage?lang=ar&url=${window.location.href}&typeid=${e}&subcategoryid=${ee}`;
                }
                window.location.href = `/Home/ChangeLanguage?lang=ar&url=${window.location.href}`;


            }
            else if (isChecked === false) {
                window.localStorage.setItem('language_switch', isChecked);
                if (e !== null) {

                    window.location.href = `/Home/ChangeLanguage?lang=en&url=${window.location.href}&typeid=${e}`;
                }
                window.location.href = `/Home/ChangeLanguage?lang=en&url=${window.location.href}`;
            }
        }

    </script>

